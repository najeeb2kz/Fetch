<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FetchApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_fetch"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_fetch"
        android:theme="@style/Theme.Fetch">

        <!-- Splash screen  -->
        <activity
            android:name="com.chaudhry.najeeb.fetch.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Fetch">
        </activity>
    </application>

</manifest>